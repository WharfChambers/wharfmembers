<%= form_for(@member) do |f| %>
  <% if @member.errors.any? %>
    <% @member.errors.full_messages.each do |msg| %>
      <div class="alert alert-error">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= msg %>
      </div>
    <% end %>
  <% end %>

  <div class="row-fluid">
    <div class="span3">
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
      <%= f.label :email %>
      <%= f.text_field :email %>
      <%= f.label :phone %>
      <%= f.text_field :phone %>
    </div>
    <div class="span3">
      <%= f.label :address %>
      <%= f.text_field :address_one %>
      <%= f.text_field :address_two %>
      <%= f.text_field :address_three %>
      <%= f.label :postcode %>
      <%= f.text_field :postcode %>
      <br />
      <%= f.label :email_allowed, class: "checkbox" do %>
        <%= f.check_box :email_allowed %> Email allowed?
      <% end %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", '/', class: "btn" %>
  </div>
</div>
<% end %>
